<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">
                            <i class="fas fa-user-plus me-2"></i>
                            <%= title %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <% if (error) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <%= error %>
                            </div>
                        <% } %>

                        <% if (errors && errors.length > 0) { %>
                            <div class="alert alert-danger" role="alert">
                                <ul class="mb-0">
                                    <% errors.forEach(error => { %>
                                        <li><%= error.msg %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% } %>

                        <form method="POST" action="<%= group ? '/auth/register/' + group._id : '/auth/register' %>">
                            <div class="form-floating mb-3">
                                <input class="form-control" 
                                       id="name" 
                                       name="name" 
                                       type="text" 
                                       placeholder="Введите ваше имя" 
                                       value="<%= req.body.name || '' %>"
                                       required>
                                <label for="name">Имя *</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input class="form-control" 
                                       id="email" 
                                       name="email" 
                                       type="email" 
                                       placeholder="name@example.com" 
                                       value="<%= req.body.email || '' %>"
                                       required>
                                <label for="email">Email *</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input class="form-control" 
                                       id="password" 
                                       name="password" 
                                       type="password" 
                                       placeholder="Создайте пароль" 
                                       required>
                                <label for="password">Пароль *</label>
                            </div>

                            <% if (!group) { %>
                                <div class="form-floating mb-3">
                                    <input class="form-control" 
                                           id="confirmPassword" 
                                           name="confirmPassword" 
                                           type="password" 
                                           placeholder="Подтвердите пароль" 
                                           required>
                                    <label for="confirmPassword">Подтвердите пароль *</label>
                                </div>
                            <% } else { %>
                                <input type="hidden" name="confirmPassword" value="<%= req.body.password || '' %>">
                            <% } %>

                            <% if (group) { %>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Регистрация в группе:</strong> <%= group.name %>
                                    <% if (group.description) { %>
                                        <br><small><%= group.description %></small>
                                    <% } %>
                                </div>
                            <% } else { %>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="group" name="group" required>
                                        <option value="">Выберите группу</option>
                                        <% if (groups && groups.length > 0) { %>
                                            <% groups.forEach(grp => { %>
                                                <option value="<%= grp._id %>" 
                                                        <%= req.body.group === grp._id.toString() ? 'selected' : '' %>>
                                                    <%= grp.name %> 
                                                    (<%= grp.currentStudents %>/<%= grp.maxStudents %> студентов)
                                                </option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                    <label for="group">Группа *</label>
                                </div>
                            <% } %>

                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" href="/auth/login">
                                    <i class="fas fa-sign-in-alt me-1"></i>
                                    Уже есть аккаунт? Войти
                                </a>
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Зарегистрироваться
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small">
                            <a href="/">Вернуться на главную</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Валидация паролей
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword');
            
            if (confirmPassword && password !== confirmPassword.value) {
                e.preventDefault();
                alert('Пароли не совпадают!');
                confirmPassword.focus();
            }
        });
    </script>
</body>
</html>