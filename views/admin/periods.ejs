<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Периоды оценивания</h1>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPeriodModal">
                        <i class="fas fa-plus me-2"></i>Создать период
                    </button>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <% if (req.query.success) { %>
                    <div class="alert alert-success" role="alert">
                        <%= req.query.success %>
                    </div>
                <% } %>

                <% if (req.query.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= req.query.error %>
                    </div>
                <% } %>

                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="periodsTable">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Описание</th>
                                        <th>Период</th>
                                        <th>Группы</th>
                                        <th>Статус</th>
                                        <th>Создан</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (periods && periods.length > 0) { %>
                                        <% periods.forEach(period => { %>
                                            <tr>
                                                <td><%= period.name %></td>
                                                <td><%= period.description || 'Нет описания' %></td>
                                                <td>
                                                    <%= new Date(period.startDate).toLocaleDateString('ru-RU') %> - 
                                                    <%= new Date(period.endDate).toLocaleDateString('ru-RU') %>
                                                </td>
                                                <td>
                                                    <% if (period.groups && period.groups.length > 0) { %>
                                                        <% period.groups.forEach(group => { %>
                                                            <span class="badge bg-info me-1"><%= group.name %></span>
                                                        <% }); %>
                                                    <% } else { %>
                                                        <span class="text-muted">Нет групп</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (period.isActive) { %>
                                                        <span class="badge bg-success">Активен</span>
                                                    <% } else if (period.status === 'completed') { %>
                                                        <span class="badge bg-secondary">Завершен</span>
                                                    <% } else if (period.status === 'cancelled') { %>
                                                        <span class="badge bg-danger">Отменен</span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning">Черновик</span>
                                                    <% } %>
                                                </td>
                                                <td><%= new Date(period.createdAt).toLocaleDateString('ru-RU') %></td>
                                                <td>
                                                    <% if (!period.isActive && period.status !== 'completed') { %>
                                                        <form method="POST" action="/admin/periods/<%= period._id %>/activate" class="d-inline">
                                                            <button type="submit" class="btn btn-sm btn-success me-1" 
                                                                    onclick="return confirm('Активировать этот период оценивания?')">
                                                                <i class="fas fa-play"></i>
                                                            </button>
                                                        </form>
                                                    <% } %>
                                                    
                                                    <% if (period.isActive) { %>
                                                        <form method="POST" action="/admin/periods/<%= period._id %>/deactivate" class="d-inline">
                                                            <button type="submit" class="btn btn-sm btn-warning me-1" 
                                                                    onclick="return confirm('Деактивировать этот период оценивания?')">
                                                                <i class="fas fa-pause"></i>
                                                            </button>
                                                        </form>
                                                    <% } %>
                                                    
                                                    <% if (!period.isActive) { %>
                                                        <button class="btn btn-sm btn-danger" 
                                                                onclick="deletePeriod('<%= period._id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center text-muted">Нет периодов оценивания</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal для создания периода -->
    <div class="modal fade" id="createPeriodModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Создать период оценивания</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/periods">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="name" class="form-label">Название периода *</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Описание</label>
                            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="startDate" class="form-label">Дата начала *</label>
                                    <input type="datetime-local" class="form-control" id="startDate" name="startDate" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="endDate" class="form-label">Дата окончания *</label>
                                    <input type="datetime-local" class="form-control" id="endDate" name="endDate" required>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Группы для оценивания *</label>
                            <% if (groups && groups.length > 0) { %>
                                <% groups.forEach(group => { %>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" 
                                               name="groups" value="<%= group._id %>" id="group<%= group._id %>">
                                        <label class="form-check-label" for="group<%= group._id %>">
                                            <%= group.name %> (<%= group.currentStudents %> студентов)
                                        </label>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <p class="text-muted">Нет доступных групп</p>
                            <% } %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-primary">Создать</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deletePeriod(periodId) {
            if (confirm('Вы уверены, что хотите удалить этот период оценивания?')) {
                fetch(`/admin/periods/${periodId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Ошибка при удалении: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Ошибка при удалении периода');
                });
            }
        }

        // Валидация дат
        document.getElementById('endDate').addEventListener('change', function() {
            const startDate = new Date(document.getElementById('startDate').value);
            const endDate = new Date(this.value);
            
            if (endDate <= startDate) {
                this.setCustomValidity('Дата окончания должна быть после даты начала');
            } else {
                this.setCustomValidity('');
            }
        });

        document.getElementById('startDate').addEventListener('change', function() {
            const startDate = new Date(this.value);
            const endDate = new Date(document.getElementById('endDate').value);
            
            if (endDate <= startDate) {
                document.getElementById('endDate').setCustomValidity('Дата окончания должна быть после даты начала');
            } else {
                document.getElementById('endDate').setCustomValidity('');
            }
        });
    </script>
</body>
</html>

