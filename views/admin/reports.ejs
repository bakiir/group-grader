<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Отчеты по оцениванию</h1>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    Периоды оценивания
                                </h5>
                            </div>
                            <div class="card-body">
                                <% if (periods && periods.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Название периода</th>
                                                    <th>Описание</th>
                                                    <th>Период</th>
                                                    <th>Группы</th>
                                                    <th>Статус</th>
                                                    <th>Действия</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% periods.forEach(period => { %>
                                                    <tr>
                                                        <td>
                                                            <strong><%= period.name %></strong>
                                                        </td>
                                                        <td>
                                                            <%= period.description || 'Нет описания' %>
                                                        </td>
                                                        <td>
                                                            <small class="text-muted">
                                                                <%= new Date(period.startDate).toLocaleDateString('ru-RU') %> - 
                                                                <%= new Date(period.endDate).toLocaleDateString('ru-RU') %>
                                                            </small>
                                                        </td>
                                                        <td>
                                                            <% if (period.groups && period.groups.length > 0) { %>
                                                                <% period.groups.forEach(group => { %>
                                                                    <span class="badge bg-info me-1"><%= group.name %></span>
                                                                <% }); %>
                                                            <% } else { %>
                                                                <span class="text-muted">Нет групп</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (period.isActive) { %>
                                                                <span class="badge bg-success">Активен</span>
                                                            <% } else if (period.status === 'completed') { %>
                                                                <span class="badge bg-secondary">Завершен</span>
                                                            <% } else if (period.status === 'cancelled') { %>
                                                                <span class="badge bg-danger">Отменен</span>
                                                            <% } else { %>
                                                                <span class="badge bg-warning">Черновик</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/reports/period/<%= period._id %>" 
                                                               class="btn btn-sm btn-primary me-1">
                                                                <i class="fas fa-eye me-1"></i>Просмотр
                                                            </a>
                                                            <% if (period.status === 'completed' || period.isActive) { %>
                                                                <a href="/admin/reports/period/<%= period._id %>/export" 
                                                                   class="btn btn-sm btn-success">
                                                                    <i class="fas fa-download me-1"></i>CSV
                                                                </a>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-5">
                                        <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">Нет периодов оценивания</h5>
                                        <p class="text-muted">Создайте период оценивания, чтобы увидеть отчеты.</p>
                                        <a href="/admin/periods" class="btn btn-primary">
                                            <i class="fas fa-plus me-2"></i>Создать период
                                        </a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Статистика -->
                <% if (periods && periods.length > 0) { %>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card text-white bg-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">Всего периодов</h4>
                                            <h2><%= periods.length %></h2>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-calendar fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">Активных</h4>
                                            <h2><%= periods.filter(p => p.isActive).length %></h2>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-play fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-secondary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">Завершенных</h4>
                                            <h2><%= periods.filter(p => p.status === 'completed').length %></h2>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-check fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-white bg-warning">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h4 class="card-title">Черновиков</h4>
                                            <h2><%= periods.filter(p => p.status === 'draft').length %></h2>
                                        </div>
                                        <div class="align-self-center">
                                            <i class="fas fa-edit fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

