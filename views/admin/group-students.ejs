<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Студенты группы: <%= group.name %></h1>
                    <div>
                        <a href="/admin/teams/<%= group._id %>" class="btn btn-info me-2">
                            <i class="fas fa-layer-group me-2"></i>Управление командами
                        </a>
                        <a href="/admin/groups" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Назад к группам
                        </a>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Всего студентов</h4>
                                        <h2><%= students ? students.length : 0 %></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-users fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">В командах</h4>
                                        <h2><%= students ? students.filter(s => s.currentTeam).length : 0 %></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-layer-group fa-3x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="mb-0">Список студентов</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Имя</th>
                                        <th>Email</th>
                                        <th>Команда</th>
                                        <th>Дата регистрации</th>
                                        <th>Статус</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (students && students.length > 0) { %>
                                        <% students.forEach(student => { %>
                                            <tr>
                                                <td><%= student.name %></td>
                                                <td><%= student.email %></td>
                                                <td>
                                                    <% if (student.currentTeam) { %>
                                                        <span class="badge bg-info"><%= student.currentTeam.name %></span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">Без команды</span>
                                                    <% } %>
                                                </td>
                                                <td><%= new Date(student.createdAt).toLocaleDateString('ru-RU') %></td>
                                                <td>
                                                    <% if (student.isActive) { %>
                                                        <span class="badge bg-success">Активен</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Неактивен</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center text-muted">В группе нет студентов</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
