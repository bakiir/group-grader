<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Отчет по периоду: <%= period.name %></h1>
                    <div>
                        <a href="/admin/reports/period/<%= period._id %>/export" class="btn btn-success me-2">
                            <i class="fas fa-download me-1"></i>Экспорт CSV
                        </a>
                        <a href="/admin/reports" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Назад к отчетам
                        </a>
                    </div>
                </div>

                <!-- Информация о периоде -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-header">
                                <h5 class="mb-0">Информация о периоде</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Название:</strong> <%= period.name %></p>
                                        <p><strong>Описание:</strong> <%= period.description || 'Нет описания' %></p>
                                        <p><strong>Статус:</strong> 
                                            <% if (period.isActive) { %>
                                                <span class="badge bg-success">Активен</span>
                                            <% } else if (period.status === 'completed') { %>
                                                <span class="badge bg-secondary">Завершен</span>
                                            <% } else { %>
                                                <span class="badge bg-warning">Черновик</span>
                                            <% } %>
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Период:</strong> 
                                            <%= new Date(period.startDate).toLocaleDateString('ru-RU') %> - 
                                            <%= new Date(period.endDate).toLocaleDateString('ru-RU') %>
                                        </p>
                                        <p><strong>Группы:</strong> 
                                            <% period.groups.forEach(group => { %>
                                                <span class="badge bg-info me-1"><%= group.name %></span>
                                            <% }); %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Статистика -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Всего команд</h4>
                                        <h2><%= stats.totalTeams %></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-users fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Всего оценок</h4>
                                        <h2><%= stats.totalEvaluations %></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-star fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Средняя оценка</h4>
                                        <h2><%= stats.averageScore %></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-chart-line fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4 class="card-title">Оцененных команд</h4>
                                        <h2><%= stats.completedTeams %></h2>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-check-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Средние оценки по критериям -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-header">
                                <h5 class="mb-0">Средние оценки по критериям</h5>
                            </div>
                            <div class="card-body">
                                <% if (criteriaStats && criteriaStats.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Критерий</th>
                                                    <th>Средняя оценка</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% criteriaStats.forEach(criterion => { %>
                                                    <tr>
                                                        <td><%= criterion.name %></td>
                                                        <td><strong><%= criterion.average %></strong></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-4">
                                        <p class="text-muted">Нет данных по критериям.</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Результаты по командам -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-header">
                                <h5 class="mb-0">Результаты по командам (Турнирная таблица)</h5>
                            </div>
                            <div class="card-body">
                                <% if (teamReportData && teamReportData.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover table-bordered text-center">
                                            <thead class="table-light">
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col" class="text-start">Команда</th>
                                                    <th scope="col">Группа</th>
                                                    <% criteria.forEach(criterion => { %>
                                                        <th scope="col"><%= criterion.name %></th>
                                                    <% }); %>
                                                    <th scope="col" class="bg-primary text-white">Общий средний балл</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% teamReportData.forEach((teamData, index) => { %>
                                                    <tr>
                                                        <th scope="row"><%= index + 1 %></th>
                                                        <td class="text-start"><strong><%= teamData.teamName %></strong></td>
                                                        <td><span class="badge bg-info"><%= teamData.groupName %></span></td>
                                                        <% criteria.forEach(criterion => { %>
                                                            <td>
                                                                <%= teamData.averageScores[criterion._id.toString()].toFixed(2) %>
                                                            </td>
                                                        <% }); %>
                                                        <td class="bg-light">
                                                            <strong><%= teamData.overallAverage.toFixed(2) %></strong>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                             <tfoot>
                                                <tr class="table-light fw-bold">
                                                    <td colspan="3" class="text-end">Средний балл по критерию:</td>
                                                    <% criteriaStats.forEach(stat => { %>
                                                        <td><%= stat.average %></td>
                                                    <% }); %>
                                                    <td></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-4">
                                        <i class="fas fa-chart-bar fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">Нет данных для отображения</h5>
                                        <p class="text-muted">По этому периоду пока нет оценок.</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

