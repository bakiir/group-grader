<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Личный кабинет</h1>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <% if (req.query.success) { %>
                    <div class="alert alert-success" role="alert">
                        <%= req.query.success %>
                    </div>
                <% } %>

                <!-- Информация о пользователе -->
                <div class="row mb-4">
                    <div class="col-lg-8">
                        <div class="card shadow">
                            <div class="card-header">
                                <h5 class="mb-0">Информация о вас</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Имя:</strong> <%= user.name %></p>
                                        <p><strong>Email:</strong> <%= user.email %></p>
                                        <p><strong>Группа:</strong> <%= user.group ? user.group.name : 'Не назначена' %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Команда:</strong> 
                                            <% if (user.currentTeam) { %>
                                                <span class="badge bg-primary"><%= user.currentTeam.name %></span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Не назначена</span>
                                            <% } %>
                                        </p>
                                        <p><strong>Роль:</strong> <span class="badge bg-info">Студент</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card shadow">
                            <div class="card-header">
                                <h5 class="mb-0">Быстрые действия</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="/student/team" class="btn btn-outline-primary">
                                        <i class="fas fa-users me-2"></i>Моя команда
                                    </a>
                                    <a href="/student/evaluation" class="btn btn-outline-success">
                                        <i class="fas fa-star me-2"></i>Оценивание
                                    </a>
                                    <a href="/student/history" class="btn btn-outline-info">
                                        <i class="fas fa-history me-2"></i>История команд
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Активный период оценивания -->
                <% if (activePeriod) { %>
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-calendar me-2"></i>
                                        Активный период оценивания
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Название:</strong> <%= activePeriod.name %></p>
                                            <p><strong>Описание:</strong> <%= activePeriod.description || 'Нет описания' %></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Начало:</strong> <%= new Date(activePeriod.startDate).toLocaleDateString('ru-RU') %></p>
                                            <p><strong>Окончание:</strong> <%= new Date(activePeriod.endDate).toLocaleDateString('ru-RU') %></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Нет активного периода оценивания
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="mb-0">В данный момент нет активного периода оценивания. Обратитесь к администратору.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>

                <!-- Команды для оценивания -->
                <% if (teamsToEvaluate && teamsToEvaluate.length > 0) { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow">
                                <div class="card-header">
                                    <h5 class="mb-0">Команды для оценивания</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <% teamsToEvaluate.forEach(team => { %>
                                            <div class="col-md-6 col-lg-4 mb-3">
                                                <div class="card border-primary">
                                                    <div class="card-body">
                                                        <h6 class="card-title"><%= team.name %></h6>
                                                        <p class="card-text">
                                                            <small class="text-muted">Группа: <%= team.group.name %></small><br>
                                                            <small class="text-muted">Участников: <%= team.members.length %></small>
                                                        </p>
                                                        <a href="/student/evaluation?teamId=<%= team._id %>" class="btn btn-primary btn-sm">
                                                            <i class="fas fa-star me-1"></i>Оценить
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else if (activePeriod) { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow">
                                <div class="card-body text-center">
                                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                    <h5>Все команды оценены!</h5>
                                    <p class="text-muted">Вы оценили все доступные команды в текущем периоде.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
