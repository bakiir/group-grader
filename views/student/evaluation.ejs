<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Оценивание команд</h1>
                    <a href="/student/dashboard" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад в кабинет
                    </a>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <% if (req.query.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= req.query.error %>
                    </div>
                <% } %>

                <% if (req.query.success) { %>
                    <div class="alert alert-success" role="alert">
                        <%= req.query.success %>
                    </div>
                <% } %>

                <% if (activePeriod) { %>
                    <!-- Информация о периоде -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-calendar me-2"></i>
                                        Период оценивания: <%= activePeriod.name %>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Описание:</strong> <%= activePeriod.description || 'Нет описания' %></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Период:</strong> 
                                                <%= new Date(activePeriod.startDate).toLocaleDateString('ru-RU') %> - 
                                                <%= new Date(activePeriod.endDate).toLocaleDateString('ru-RU') %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Команды для оценивания -->
                    <% if (teamsToEvaluate && teamsToEvaluate.length > 0) { %>
                        <div class="row">
                            <% teamsToEvaluate.forEach(team => { %>
                                <div class="col-lg-6 mb-4">
                                    <div class="card shadow">
                                        <div class="card-header">
                                            <h5 class="mb-0"><%= team.name %></h5>
                                            <small class="text-muted">Группа: <%= team.group.name %></small>
                                        </div>
                                        <div class="card-body">
                                            <h6>Участники команды:</h6>
                                            <ul class="list-group list-group-flush mb-3">
                                                <% team.members.forEach(member => { %>
                                                    <li class="list-group-item">
                                                        <i class="fas fa-user me-2"></i><%= member.name %>
                                                    </li>
                                                <% }); %>
                                            </ul>
                                            
                                            <form method="POST" action="/student/evaluation" class="evaluation-form">
                                                <input type="hidden" name="teamId" value="<%= team._id %>">
                                                
                                                <h6>Критерии оценивания:</h6>
                                                <% if (criteria && criteria.length > 0) { %>
                                                    <% criteria.forEach(criterion => { %>
                                                        <div class="mb-3">
                                                            <label class="form-label">
                                                                <%= criterion.name %>
                                                                <small class="text-muted">(вес: <%= criterion.weight %>%, макс: <%= criterion.maxScore %> баллов)</small>
                                                            </label>
                                                            <input type="number" 
                                                                   class="form-control" 
                                                                   name="criteria[<%= criterion._id %>][criterionId]" 
                                                                   value="<%= criterion._id %>" 
                                                                   style="display: none;">
                                                            <input type="number" 
                                                                   class="form-control" 
                                                                   name="criteria[<%= criterion._id %>][score]" 
                                                                   min="0" 
                                                                   max="<%= criterion.maxScore %>" 
                                                                   step="0.1"
                                                                   required>
                                                            <% if (criterion.description) { %>
                                                                <small class="form-text text-muted"><%= criterion.description %></small>
                                                            <% } %>
                                                        </div>
                                                    <% }); %>
                                                <% } else { %>
                                                    <div class="alert alert-warning">
                                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                                        Нет доступных критериев для оценивания
                                                    </div>
                                                <% } %>
                                                
                                                <div class="mb-3">
                                                    <label for="comments" class="form-label">Комментарии (необязательно)</label>
                                                    <textarea class="form-control" 
                                                              id="comments" 
                                                              name="comments" 
                                                              rows="3" 
                                                              placeholder="Ваши комментарии к оценке..."></textarea>
                                                </div>
                                                
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fas fa-star me-2"></i>Отправить оценку
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="row">
                            <div class="col-12">
                                <div class="card shadow">
                                    <div class="card-body text-center">
                                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                        <h5>Все команды оценены!</h5>
                                        <p class="text-muted">Вы оценили все доступные команды в текущем периоде.</p>
                                        <a href="/student/dashboard" class="btn btn-primary">
                                            <i class="fas fa-arrow-left me-2"></i>Вернуться в кабинет
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">Нет активного периода оценивания</h5>
                                    <p class="text-muted">В данный момент нет активного периода оценивания. Обратитесь к администратору.</p>
                                    <a href="/student/dashboard" class="btn btn-primary">
                                        <i class="fas fa-arrow-left me-2"></i>Вернуться в кабинет
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Валидация форм оценивания
        document.querySelectorAll('.evaluation-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const scoreInputs = this.querySelectorAll('input[name*="[score]"]');
                let hasValidScores = true;
                
                scoreInputs.forEach(input => {
                    const value = parseFloat(input.value);
                    const max = parseFloat(input.getAttribute('max'));
                    
                    if (isNaN(value) || value < 0 || value > max) {
                        hasValidScores = false;
                        input.classList.add('is-invalid');
                    } else {
                        input.classList.remove('is-invalid');
                    }
                });
                
                if (!hasValidScores) {
                    e.preventDefault();
                    alert('Пожалуйста, введите корректные оценки для всех критериев.');
                }
            });
        });
    </script>
</body>
</html>
