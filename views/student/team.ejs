<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../layouts/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Моя команда</h1>
                    <a href="/student/dashboard" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад в кабинет
                    </a>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <% if (team) { %>
                    <!-- Информация о команде -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-layer-group me-2"></i>
                                        <%= team.name %>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Группа:</strong> <%= team.group.name %></p>
                                            <p><strong>Количество участников:</strong> <%= team.members.length %></p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Статус:</strong> 
                                                <% if (team.isActive) { %>
                                                    <span class="badge bg-success">Активна</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Неактивна</span>
                                                <% } %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Участники команды -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fas fa-users me-2"></i>
                                        Участники команды
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <% team.members.forEach(member => { %>
                                            <div class="col-md-6 col-lg-4 mb-3">
                                                <div class="card border-primary">
                                                    <div class="card-body text-center">
                                                        <div class="mb-3">
                                                            <i class="fas fa-user-circle fa-3x text-primary"></i>
                                                        </div>
                                                        <h6 class="card-title"><%= member.name %></h6>
                                                        <p class="card-text">
                                                            <small class="text-muted"><%= member.email %></small>
                                                        </p>
                                                        <% if (member._id.toString() === user._id.toString()) { %>
                                                            <span class="badge bg-primary">Вы</span>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Нет команды -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">У вас нет активной команды</h5>
                                    <p class="text-muted">Обратитесь к администратору для назначения в команду.</p>
                                    <a href="/student/dashboard" class="btn btn-primary">
                                        <i class="fas fa-arrow-left me-2"></i>Вернуться в кабинет
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
